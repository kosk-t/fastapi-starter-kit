{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/app/main.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "run",
        "--host", "127.0.0.1",
        "--port", "8000",
        "--reload"
      ],
      "jinja": true
    }
  ]
}